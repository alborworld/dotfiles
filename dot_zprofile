# Generic
export EDITOR='vim'

# System-specific
os=`uname -s`

case $os in
    "Darwin" )
        export PATH="$HOME/bin:$PATH"
        alias dircolors='gdircolors'
        eval "$(/opt/homebrew/bin/brew shellenv)"
        ;;
esac

# Local variables (not to be committed)
if [[ -f ~/.zprofile_local ]]; then
    source ~/.zprofile_local
fi
